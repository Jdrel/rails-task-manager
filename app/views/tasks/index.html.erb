<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task|  %>

  <li>
    <% if task.completed == true  %>
    <i class="far fa-check-square"></i>
    <% else  %>
    <i class="far fa-square"></i>
    <% end %>

    <%= link_to task.title, task_path(task) %>
    <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_path(task) %>
    <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, destroy_path(task), method: :delete, data: { confirm: "Are you sure?" } %>

  </li>
  <% end %>
</ul>

<%= link_to '<i class="fas fa-plus-circle"></i> Create new task'.html_safe, new_path %>
